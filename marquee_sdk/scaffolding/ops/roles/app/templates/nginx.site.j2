{%- raw -%}
upstream runtime_server {
    server 127.0.0.1:8000 fail_timeout=0;
}

server {
    listen 80;
    server_name {{ runtime_domain }};
    access_log /var/log/nginx/{{ runtime_domain }}.access.log;
    error_log /var/log/nginx/{{ runtime_domain }}.error.log;
    keepalive_timeout 5;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_pass http://runtime_server;
    }

    location /static {
        expires 168h;
        add_header Pragma public;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
        root /srv/{{ project_name }};
    }

}

{% if app_alt_domains is defined %}
server {
    listen 80;
    server_name {% for d in runtime_alt_domains %} {{ d }}{% endfor %};
    rewrite ^/(.*)$ $scheme://{{ runtime_domain }}/$1 permanent;
}
{% endif %}
{%- endraw -%}
