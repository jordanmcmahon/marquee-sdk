# -x- coding: utf-8 -*-
#!/usr/bin/env python

import click
import os

plugin_folder = os.path.join(os.path.dirname(__file__), '..', 'marquee_sdk', 'commands')

class MarqueeCommandLineInterface(click.MultiCommand):

    def list_commands(self, ctx):
        rv = []
        for filename in os.listdir(plugin_folder):
            if filename.endswith('.py'):
                print filename
                rv.append(filename[:-3])
        rv.sort()
        return rv

    def get_command(self, ctx, name):
        ns = {}
        fn = os.path.join(plugin_folder, '{0}.py'.format(name))
        try:
            with open(fn) as f:
                code = compile(f.read(), fn, 'exec')
                eval(code, ns, ns)
        except IOError:
            click.echo('`{0}` is an unknown command'.format(name))
            quit()
        return ns['cli']

cli = MarqueeCommandLineInterface(help="The Marquee Software Development Kit")

if __name__ == '__main__':
    cli() 
